{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}